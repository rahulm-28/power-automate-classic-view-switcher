{
  "manifest_version": 3,
  "name": "Power Automate Classic View Switcher",
  "version": "1.0.0",
  "description": "Switch Power Automate to classic designer automatically or with one click. Perfect for developers who prefer classic flow editor.",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": [
    "https://make.powerautomate.com/*",
    "https://flow.microsoft.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Switch to Classic Designer",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
